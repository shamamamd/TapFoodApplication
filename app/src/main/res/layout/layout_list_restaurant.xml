<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="1dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="14dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageFood"
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="13dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/nameRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginRight="118dp"
                android:fontFamily="@font/iransans_mobile_bold"
                android:gravity="end"
                android:textColor="#212121"
                android:textSize="14sp"
                tools:text="بامیکا" />


            <TextView
                android:id="@+id/descriptionFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameRestaurant"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="118dp"
                android:fontFamily="@font/iransans_mobile_bold"
                android:gravity="end"
                android:textColor="#aaaaaa"
                android:textSize="12sp"
                tools:text="ایرانی" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="118dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/descriptionFood"
                android:background="#34979797" />


            <RelativeLayout
                android:layout_width="26.7dp"
                android:layout_height="30.5dp"
                android:layout_marginLeft="11dp"
                android:background="@drawable/path_7">

                <TextView
                    android:id="@+id/saleRestaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/iransans_mobile_bold"
                    android:text="۲۵٪"
                    android:textColor="#ffffff"
                    android:textSize="11.5sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="118dp"
                android:layout_below="@id/descriptionFood"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/star"
                    android:layout_width="38dp"
                    android:layout_height="19dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/border">


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/group_3" />

                    <TextView
                        android:id="@+id/rateRestaurant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/imageView"
                        android:fontFamily="@font/iransans_mobile_bold"
                        android:gravity="center"
                        android:text="۴.۲"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/coo"
                    android:layout_toLeftOf="@id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textColor="#aaaaaa"
                    android:layout_marginRight="50dp"
                    android:gravity="end"
                    android:fontFamily="@font/iransans_mobile_bold"
                    android:layout_centerVertical="true"
                    android:text="(۱۹۰)"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/coo"
                    android:background="#34979797" />
                <TextView
                    android:id="@+id/numStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="120dp"
                    android:layout_toLeftOf="@id/coo"
                    android:fontFamily="@font/iransans_mobile_bold"
                    android:gravity="end"
                    android:text=" ۱۰۶ "
                    android:textColor="#212121"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="140dp"
                    android:fontFamily="@font/iransans_mobile_bold"
                    android:gravity="end"
                    android:text=" نظر"
                    android:textColor="#212121"
                    android:textSize="12sp" />


            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>